<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardviewlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#0a0a0a"
    android:layout_margin="2dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/plate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:drawableRight="@drawable/ic_directions_car_white_24dp"
            android:drawablePadding="5dp"
            android:text="TextView"
            android:textColor="#ffff"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/plate"
            android:fontFamily="@font/open_sans"
            android:text="Nama Pemandu:"
            android:textColor="#ffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/plate"
            android:layout_marginLeft="115dp"
            android:fontFamily="@font/open_sans"
            android:text="TextView"
            android:textAlignment="viewStart"
            android:textColor="#ffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:fontFamily="@font/open_sans"
            android:text="No Ic:"
            android:textAllCaps="false"
            android:textColor="#ffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/open_sans"
            android:text="TextView"
            android:textAlignment="viewStart"
            android:textColor="#ffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ic"
            android:fontFamily="@font/open_sans"
            android:text="No Telefon:"
            android:textAllCaps="false"
            android:textColor="#ffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/phonenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ic"
            android:layout_marginLeft="78dp"
            android:fontFamily="@font/open_sans"
            android:text="TextView"
            android:textAlignment="viewStart"
            android:textColor="#ffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textroadtax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phonenum"
            android:fontFamily="@font/open_sans"
            android:text="Tarikh Tamat Cukai Jalan:"
            android:textColor="#ffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phonenum"
            android:layout_marginLeft="168dp"
            android:fontFamily="@font/open_sans"
            android:text="TextView"
            android:textColor="#ffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textcompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date"
            android:fontFamily="@font/open_sans"
            android:text="Syarikat Insurance:"
            android:textColor="#ffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date"
            android:layout_marginLeft="125dp"
            android:fontFamily="@font/open_sans"
            android:text="TextView"
            android:textColor="#ffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/texttype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/company"
            android:fontFamily="@font/open_sans"
            android:text="Jenis Insurance:"
            android:textColor="#ffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/company"
            android:layout_marginLeft="115dp"
            android:fontFamily="@font/open_sans"
            android:text="TextView"
            android:textColor="#ffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/type"
            android:fontFamily="@font/open_sans"
            android:text="Status:"
            android:textColor="#ffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/type"
            android:layout_marginLeft="50dp"
            android:fontFamily="@font/open_sans"
            android:text="TextView"
            android:textColor="#ffff"
            android:textSize="16sp" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>